<button type="button" class="btn btn-primary" id="scrapeArticlesButton">Click this 📝 to scrape new articles</button>

<nav class="navbar navbar-expand" id="navbar">
    <ul class="navbar-nav">
        <li class="nav-item">
        <a class="nav-link navLink" href="/">🏡Home</a>
        </li>
        <li class="nav-item">
        <a class="nav-link navLink" href="/saved">📑Saved News</a>
        </li>
    </ul>    

</nav>
<div class="articleContainer" style="margin-left: 400px">
    <div class="row">
      <div class="col-9">
        <div class="col-1">
        </div>
        <div class="col-10 articleColumn">
            {{#each articles}}
                <div class="card">
                    <div class="card-header">
                        <a class="headlineLink" href={{link}} target="_blank">{{headline}}</a>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-2">
                                <img class="articleImage" src={{photo}}>
                            </div>
                            <div class="col-7">
                                <p>{{summary}}{{date}}</p>
                            </div>
                            <div class="col-3 buttonColumn">
                                <button type="button" class="btn btn-primary saveArticleButton" data-id={{id}}>Save it💾</button>
                            </div>
                        </div>
                    </div>
                </div>
            {{/each}}
        </div>
        <div class="col-1">
        </div>
    </div>
</div>
</div>


<div class="modal fade" id="scrapeArticlesModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title articlesScrapedTitle" >Scraping...⚒</h5>
      </div>
      <div class="modal-body articlesScrapedBody">
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" id="closeScrapeButton" data-dismiss="modal">Dismiss</button>
      </div>
    </div>
  </div>
</div>
<div class="modal fade" id="articleSavedModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title articleSavedTitle" >Saved!💾</h5>
      </div>
      <div class="modal-body articleSavedBody">
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" id="closeArticleButton" data-dismiss="modal">Dismiss</button>
      </div>
    </div>
  </div>
</div>